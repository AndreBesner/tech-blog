<div class="container mt-5">
  <div class="row headerRow">
    <div class="col-8">
      <h2 class="blogTitle text-uppercase">{{name}}</h2>
    </div>
    <div class="col-4">
      <p class="blogCreate text-right">Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
  </div>
  <p class="text-left blogDescTwo">{{description}}</p>
</div>

<div class="container mt-5">
  <h4>Comments</h4>
  <ul class="list-group">
    {{#each comments}}
    <li class="list-group-item">
      <p>{{comment_description}}</p>
    </li>
    {{/each}}
  </ul>

  {{#if logged_in}}
  <div id="comment-container">
    <form id="comment-form" class="mt-4" data-blogid={{id}}>
      <div class="form-group">
        <label for="commentInput">Leave a Comment</label>
        <textarea class="form-control" id="comment-input" name="comment_description" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
{{/if}}

